{
  "description": "Audio only mode for youtube.com and m.youtube.com",
  "manifest_version": 3,
  "name": "Tube Audio Options+",
  "homepage_url": "https://github.com/schdie/we_firefox_ytop_mv3",
  "version": "42",
  
  "icons": {
    "48": "icons/48.png",
    "96": "icons/96.png",
    "128": "icons/128.png"
  },
  
  "permissions": [
    "storage"
  ],
  
  "host_permissions": [
		"*://*.youtube.com/*", "*://*.googlevideo.com/*"
	],
	
	"web_accessible_resources": [
    {
      "resources": [ "js/yt.js" ],
      "matches": [ "*://*.youtube.com/*" ]
    }
  ],
  
  "background": {
		"scripts": ["js/service.js"]
  },

  "content_scripts": [
  {
		"all_frames": true,
    "matches": ["*://*.youtube.com/*" ],
    "js": ["js/yt.js"],
    "run_at": "document_start"
    }
  ],
  
  "browser_specific_settings": {
    "gecko": {
			"id": "{0cc0b5b4-e2a6-410d-832e-00db8654e077}",
      "strict_min_version": "120.0"
    },
    "gecko_android": {
			"strict_min_version": "120.0"
		}
  }
}
